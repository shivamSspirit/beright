# ============================================
# BERIGHT PROTOCOL - ENVIRONMENT VARIABLES
# ============================================
# Single source of truth for all workspaces
# Copy this to .env and fill in your values
#
# DO NOT COMMIT .env TO GIT
# ============================================

# ============================================
# SUPABASE (Database - REQUIRED)
# ============================================
# Get from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Frontend public versions
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# ============================================
# SOLANA / HELIUS (Blockchain - REQUIRED)
# ============================================
# Get from: https://www.helius.dev/
# Private key as JSON array of 64 bytes
# Generate with: solana-keygen new --outfile keypair.json
SOLANA_PRIVATE_KEY=[0,0,0,...64 bytes]
HELIUS_API_KEY=your-helius-api-key
SOLANA_RPC_URL=https://mainnet.helius-rpc.com/?api-key=YOUR_KEY
HELIUS_RPC_MAINNET=https://mainnet.helius-rpc.com/?api-key=YOUR_KEY
HELIUS_RPC_DEVNET=https://devnet.helius-rpc.com/?api-key=YOUR_KEY
HELIUS_WEBSOCKET_URL=wss://atlas-mainnet.helius-rpc.com/?api-key=YOUR_KEY

# Frontend public RPC
NEXT_PUBLIC_SOLANA_RPC=https://mainnet.helius-rpc.com/?api-key=YOUR_KEY

# ============================================
# PRIVY (Wallet Authentication - REQUIRED)
# ============================================
# Get from: https://dashboard.privy.io
NEXT_PUBLIC_PRIVY_APP_ID=your-privy-app-id
PRIVY_APP_SECRET=your-privy-app-secret

# ============================================
# TELEGRAM BOT (REQUIRED for Telegram)
# ============================================
# Get from: https://t.me/BotFather
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_BOT_USERNAME=@YourBotUsername

# ============================================
# ANTHROPIC (Claude AI - REQUIRED)
# ============================================
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here

# ============================================
# TAVILY (Web Search - RECOMMENDED)
# ============================================
# Get from: https://app.tavily.com
TAVILY_API_KEY=tvly-your-api-key-here

# ============================================
# UPSTASH REDIS (Rate Limiting - RECOMMENDED)
# ============================================
# Get from: https://console.upstash.com/
UPSTASH_REDIS_REST_URL=https://your-instance.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-upstash-token

# ============================================
# KALSHI (Prediction Markets - OPTIONAL)
# ============================================
# Get from: https://kalshi.com/settings/api
# NOTE: DFlow is now the recommended way to access Kalshi markets
KALSHI_API_KEY=your-kalshi-api-key
KALSHI_API_SECRET=your-kalshi-rsa-private-key
KALSHI_USE_DEMO=false
KALSHI_BUILDER_CODE=BERIGHT_PROTOCOL

# ============================================
# DFLOW (Tokenized Prediction Markets - RECOMMENDED)
# ============================================
# Free API (rate limited without key)
# Get production key from: https://pond.dflow.net/build/api-key
DFLOW_API_KEY=

# Platform fee configuration (BeRight revenue)
# feeAccount: Solana wallet address to receive fees
# platformFeeBps: Fee in basis points (50 = 0.5%, 100 = 1%)
BERIGHT_FEE_WALLET=your-solana-wallet-address
BERIGHT_PLATFORM_FEE_BPS=50

# ============================================
# JITO (MEV Protection - OPTIONAL)
# ============================================
JITO_BLOCK_ENGINE_URL=https://mainnet.block-engine.jito.wtf/api/v1
JITO_TIP_FLOOR_URL=https://mainnet.block-engine.jito.wtf/api/v1/bundles/tip_floor
JITO_AUTH_KEYPAIR=your-jito-auth-keypair
JITO_DEFAULT_TIP_LAMPORTS=10000
JITO_MAX_TIP_LAMPORTS=100000

# ============================================
# JUPITER DEX (OPTIONAL - defaults work)
# ============================================
JUPITER_API_URL=https://quote-api.jup.ag/v6
JUPITER_REFERRAL_ACCOUNT=
JUPITER_FEE_BPS=50

# ============================================
# ROUTING CONFIG (OPTIONAL - defaults work)
# ============================================
ROUTING_NEW_TOKEN_THRESHOLD_SECONDS=300
ROUTING_HIGH_VOLUME_THRESHOLD_USD=100000
ROUTING_DEFAULT_SLIPPAGE_BPS=300
ROUTING_MAX_SLIPPAGE_BPS=1000

# ============================================
# SECURITY CONFIGURATION (REQUIRED FOR PRODUCTION)
# ============================================
# Your Telegram user ID - get from @userinfobot on Telegram
# This is the ONLY account that can use /build, /improve, /memory
SUPER_ADMIN_TELEGRAM_ID=5504043269

# Pre-verified IDs (comma-separated, optional)
# Users auto-verify when they make their first prediction
VERIFIED_TELEGRAM_IDS=

# ============================================
# NEXT.JS / APP CONFIG
# ============================================
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development
