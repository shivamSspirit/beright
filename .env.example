# BeRight Monorepo Environment Variables
# Copy this to .env and fill in your values

# ============================================
# SUPABASE (shared between api and web)
# ============================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Public keys for frontend
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# ============================================
# API URL (for berightweb to call beright-ts)
# ============================================
NEXT_PUBLIC_API_URL=http://localhost:3001

# ============================================
# TELEGRAM
# ============================================
TELEGRAM_BOT_TOKEN=your-telegram-bot-token

KALSHI_API_KEY=your-key-id                                                                         
KALSHI_API_SECRET=/path/to/private-key.pem  # or raw PEM content                                   
KALSHI_USE_DEMO=false  # true for demo API   


# ============================================
# ANTHROPIC (Claude AI)
# ============================================
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here


# ============================================
# SOLANA / HELIUS
# ============================================
HELIUS_API_KEY=your-helius-api-key
SOLANA_PRIVATE_KEY=your-base58-private-key
SOLANA_RPC_URL=https://mainnet.helius-rpc.com/?api-key=your-key

# ============================================
# KALSHI (optional)
# ============================================
KALSHI_API_KEY=your-kalshi-api-key
KALSHI_API_SECRET=your-kalshi-api-secret

# ============================================
# UPSTASH REDIS (optional, for rate limiting)
# ============================================
UPSTASH_REDIS_REST_URL=your-upstash-url
UPSTASH_REDIS_REST_TOKEN=your-upstash-token

# ============================================
# TAVILY (Web Search & Research API)
# ============================================
TAVILY_API_KEY=tvly-your-api-key-here

# ============================================
# PRIVY (wallet auth for web)
# ============================================
NEXT_PUBLIC_PRIVY_APP_ID=your-privy-app-id

TAVILY_API_KEY=***REMOVED*** 